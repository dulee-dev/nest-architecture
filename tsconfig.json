{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

    "strict": true,
    "strictPropertyInitialization": false, // strict에선 얘만 꺼둠

    "esModuleInterop": true, // import default 가능하게 해줌
    "noImplicitThis": true, // 객체 내 this 가능

    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      "@src/*": ["src/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  }
}
